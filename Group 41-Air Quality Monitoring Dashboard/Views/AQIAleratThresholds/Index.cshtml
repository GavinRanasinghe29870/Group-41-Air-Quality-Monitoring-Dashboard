@model IEnumerable<Group_41_Air_Quality_Monitoring_Dashboard.Models.AQIAlertThreshold>

<h2>AQI Alert Thresholds</h2>
<a asp-action="Create" class="btn btn-primary">Add New Threshold</a>
<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Min Value</th>
            <th>Max Value</th>
            <th>Alert Message</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category</td>
                <td>@item.MinValue</td>
                <td>@item.MaxValue</td>
                <td>@item.AlertMessage</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>